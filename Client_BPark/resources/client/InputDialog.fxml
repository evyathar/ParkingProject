<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.effect.DropShadow?>

<VBox alignment="CENTER" prefHeight="260.0" prefWidth="400.0" spacing="20" style="-fx-background-color: white; -fx-background-radius: 20;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.InputDialogController">
    
    <padding>
        <Insets bottom="30" left="35" right="35" top="30" />
    </padding>
    
    <!-- Icon Circle -->
    <Circle fill="#E0E7FF" radius="30">
        <effect>
            <DropShadow color="#3B5CAD40" radius="12" spread="0.3" />
        </effect>
    </Circle>
    
    <!-- Key Icon Overlay -->
    <Label layoutX="200" layoutY="40" style="-fx-font-size: 28px; -fx-translate-y: -75;" text="ðŸ”¢" />
    
    <!-- Header Text -->
    <Label fx:id="lblHeader" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1F2937;" text="Enter Code" textAlignment="CENTER" />
    
    <!-- Message Text -->
    <Label fx:id="lblMessage" style="-fx-font-size: 13px; -fx-text-fill: #6B7280;" text="Please enter your code:" textAlignment="CENTER" />
    
    <!-- Input Field -->
    <TextField fx:id="txtInput" alignment="CENTER" prefHeight="45" promptText="Enter code here" style="-fx-background-color: #F3F4F6; -fx-background-radius: 10; -fx-font-size: 16px; -fx-text-fill: #1F2937;">
        <padding>
            <Insets left="15" right="15" />
        </padding>
        <effect>
            <DropShadow color="#0000000D" radius="5" spread="0.1" />
        </effect>
    </TextField>
    
    <!-- Button Container -->
    <HBox alignment="CENTER" spacing="12">
        
        <!-- OK Button -->
        <Button fx:id="btnOK" defaultButton="true" onAction="#handleOK" prefHeight="40" prefWidth="120" style="-fx-background-color: linear-gradient(to right, #3B5CAD, #4A69BD); -fx-background-radius: 20; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-cursor: hand;" text="Confirm">
            <effect>
                <DropShadow color="#3B5CAD40" offsetY="2" radius="8" spread="0.3" />
            </effect>
        </Button>
        
        <!-- Cancel Button -->
        <Button fx:id="btnCancel" onAction="#handleCancel" prefHeight="40" prefWidth="120" style="-fx-background-color: #F3F4F6; -fx-background-radius: 20; -fx-text-fill: #6B7280; -fx-font-size: 14px; -fx-font-weight: bold; -fx-cursor: hand;" text="Cancel">
            <effect>
                <DropShadow color="#0000000D" offsetY="2" radius="8" spread="0.1" />
            </effect>
        </Button>
        
    </HBox>
    
</VBox>