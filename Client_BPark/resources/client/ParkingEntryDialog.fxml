<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="340.0" prefWidth="520.0" spacing="20" style="-fx-background-color: white; -fx-background-radius: 20;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ConfirmationDialogController">
    
    <padding>
        <Insets bottom="30" left="35" right="35" top="30" />
    </padding>
    
    <!-- Icon Circle with overlay -->
    <StackPane alignment="CENTER">
        <Circle fill="#FEF3C7" radius="35">
            <effect>
                <DropShadow color="#F59E0B40" radius="15" spread="0.3" />
            </effect>
        </Circle>
        <Label style="-fx-font-size: 36px;" text="ðŸŽ«" />
    </StackPane>
    
    <!-- Header Text -->
    <Label fx:id="lblHeader" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1F2937;" text="Do you have a parking reservation?" textAlignment="CENTER" wrapText="true" />
    
    <!-- Message Text - Two separate lines -->
    <VBox alignment="CENTER" spacing="5">
        <Label style="-fx-font-size: 15px; -fx-text-fill: #6B7280;" text="If you have a reservation code," textAlignment="CENTER" />
        <Label style="-fx-font-size: 15px; -fx-text-fill: #6B7280;" text="please select 'Yes' to activate it first." textAlignment="CENTER" />
    </VBox>
    
    <!-- Button Container -->
    <VBox spacing="12" alignment="CENTER">
        
        <!-- Yes Button -->
        <Button fx:id="btnYes" onAction="#handleYes" prefHeight="48" prefWidth="400" style="-fx-background-color: linear-gradient(to right, #3B5CAD, #4A69BD); -fx-background-radius: 24; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-cursor: hand;" text="Yes, I have a reservation">
            <graphic>
                <Label style="-fx-font-size: 18px; -fx-text-fill: white;" text="âœ… " />
            </graphic>
            <effect>
                <DropShadow color="#3B5CAD40" offsetY="3" radius="10" spread="0.3" />
            </effect>
        </Button>
        
        <!-- No Button -->
        <Button fx:id="btnNo" onAction="#handleNo" prefHeight="48" prefWidth="400" style="-fx-background-color: linear-gradient(to right, #4CAF50, #45A049); -fx-background-radius: 24; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-cursor: hand;" text="No, continue without reservation">
            <graphic>
                <Label style="-fx-font-size: 18px; -fx-text-fill: white;" text="ðŸš— " />
            </graphic>
            <effect>
                <DropShadow color="#4CAF5040" offsetY="3" radius="10" spread="0.3" />
            </effect>
        </Button>
        
        <!-- Cancel Button -->
        <Button fx:id="btnCancel" onAction="#handleCancel" prefHeight="35" prefWidth="180" style="-fx-background-color: transparent; -fx-text-fill: #6B7280; -fx-font-size: 14px; -fx-cursor: hand; -fx-underline: true;" text="Cancel" />
        
    </VBox>
    
</VBox>