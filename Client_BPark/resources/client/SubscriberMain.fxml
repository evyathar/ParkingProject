<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="1000.0" spacing="0" style="-fx-background-color: linear-gradient(to bottom right, #F5F7FA, #E9ECEF);" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SubscriberController">

    <!-- Top Bar -->
    <HBox alignment="CENTER" spacing="20" style="-fx-background-color: linear-gradient(to right, #3B5CAD, #4A69BD); -fx-padding: 15 25 15 25;">
        <effect>
            <DropShadow color="#0000001A" offsetY="3" radius="10" spread="0.2" />
        </effect>
        
        <Label style="-fx-font-size: 24px;" text="👤" />
        <Label style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" text="BPark Subscriber Portal">
            <effect>
                <DropShadow color="#00000040" offsetY="1" radius="5" />
            </effect>
        </Label>
        
        <Region HBox.hgrow="ALWAYS" />
        
        <Button fx:id="btnLogout" onAction="#handleLogout" style="-fx-background-color: linear-gradient(to right, #F56565, #E53E3E); -fx-background-radius: 20; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-padding: 8 18 8 18; -fx-cursor: hand;" text="🚪 Logout">
            <effect>
                <DropShadow color="#F5656540" offsetY="2" radius="10" spread="0.3" />
            </effect>
        </Button>
        
        <Button fx:id="btnExit" onAction="#handleExit" style="-fx-background-color: linear-gradient(to right, #718096, #4A5568); -fx-background-radius: 20; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-padding: 8 18 8 18; -fx-cursor: hand;" text="⏻ Exit">
            <effect>
                <DropShadow color="#71809640" offsetY="2" radius="10" spread="0.3" />
            </effect>
        </Button>
    </HBox>

    <!-- Main Layout -->
    <HBox VBox.vgrow="ALWAYS">
        <!-- Left Menu -->
        <VBox prefWidth="250" spacing="15" style="-fx-background-color: white; -fx-padding: 20;">
            <Label style="-fx-text-fill: #2D3748; -fx-font-size: 18px; -fx-font-weight: bold;" text="🚗 BPark Menu" />
            
            <Separator style="-fx-background-color: linear-gradient(to right, transparent, #E2E8F0, transparent);" />
            
            <VBox spacing="8">
                <Button onAction="#handleGoHome" prefWidth="210" style="-fx-background-color: #F7FAFC; -fx-background-radius: 10; -fx-text-fill: #2D3748; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-alignment: CENTER_LEFT;" text="🏠 Home" />
                
                <Button fx:id="btnShowAvailableSpots" onAction="#handleShowAvailableSpots" prefWidth="210" style="-fx-background-color: #F7FAFC; -fx-background-radius: 10; -fx-text-fill: #2D3748; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-alignment: CENTER_LEFT;" text="🅿 Available Spots" />
                
                <Button onAction="#showReservationView" prefWidth="210" style="-fx-background-color: #F7FAFC; -fx-background-radius: 10; -fx-text-fill: #2D3748; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-alignment: CENTER_LEFT;" text="📅 Reservations" />
                
                <Button fx:id="btnViewHistory" onAction="#handleViewHistory" prefWidth="210" style="-fx-background-color: #F7FAFC; -fx-background-radius: 10; -fx-text-fill: #2D3748; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-alignment: CENTER_LEFT;" text="📜 Parking History" />
                
                <Button onAction="#handleExtendParking" prefWidth="210" style="-fx-background-color: #F7FAFC; -fx-background-radius: 10; -fx-text-fill: #2D3748; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-alignment: CENTER_LEFT;" text="⏰ Extend Parking" />
                
                <Button fx:id="btnUpdateProfile" onAction="#showProfileView" prefWidth="210" style="-fx-background-color: #F7FAFC; -fx-background-radius: 10; -fx-text-fill: #2D3748; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 20 12 20; -fx-cursor: hand; -fx-alignment: CENTER_LEFT;" text="⚙ Update Profile" />
            </VBox>
            
            <Region VBox.vgrow="ALWAYS" />
            
            <!-- Help Box at Bottom -->
            <VBox spacing="8" style="-fx-background-color: #F0FDF4; -fx-background-radius: 12; -fx-padding: 15; -fx-border-color: #4CAF50; -fx-border-radius: 12; -fx-border-width: 1;">
                <Label style="-fx-font-weight: bold; -fx-text-fill: #166534;" text="💡 Need Help?" />
                <Label style="-fx-text-fill: #4A5568; -fx-font-size: 11px;" text="Contact support@bpark.com" wrapText="true" />
            </VBox>
        </VBox>

        <!-- Main Content Area -->
        <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS">
            <VBox fx:id="mainContent" spacing="25" style="-fx-background-color: transparent; -fx-padding: 25;">
                
                <!-- Welcome Card -->
                <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 30;">
                    <effect>
                        <DropShadow color="#0000001A" offsetY="5" radius="20" spread="0.1" />
                    </effect>
                    
                    <HBox alignment="CENTER_LEFT" spacing="15">
                        <HBox alignment="CENTER" style="-fx-background-color: linear-gradient(to bottom right, #3B5CAD, #4A69BD); -fx-background-radius: 10; -fx-padding: 10;">
                            <Label style="-fx-font-size: 20px; -fx-text-fill: white;" text="👋" />
                        </HBox>
                        <VBox spacing="5">
                            <Label style="-fx-text-fill: #2D3748; -fx-font-size: 24px; -fx-font-weight: bold;" text="Welcome to BPark" />
                            <Label style="-fx-text-fill: #718096; -fx-font-size: 14px;" text="Select an action from the menu or use the quick actions below" />
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Make Reservation Card -->
                <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 30;">
                    <effect>
                        <DropShadow color="#0000001A" offsetY="5" radius="20" spread="0.1" />
                    </effect>
                    
                    <HBox alignment="CENTER_LEFT" spacing="12">
                        <HBox alignment="CENTER" style="-fx-background-color: linear-gradient(to bottom right, #4CAF50, #45A049); -fx-background-radius: 10; -fx-padding: 10;">
                            <Label style="-fx-font-size: 20px; -fx-text-fill: white;" text="📅" />
                        </HBox>
                        <Label style="-fx-text-fill: #2D3748; -fx-font-size: 20px; -fx-font-weight: bold;" text="Make Reservation" />
                    </HBox>
                    
                    <Separator style="-fx-background-color: linear-gradient(to right, transparent, #E2E8F0, transparent);" />
                    
                    <Label fx:id="lblReservationStatus" style="-fx-text-fill: #4A5568; -fx-font-size: 14px;" text="Select date and time for reservation:" />
                    
                    <HBox spacing="25">
                        <VBox spacing="8">
                            <Label style="-fx-text-fill: #4A5568; -fx-font-size: 14px; -fx-font-weight: bold;" text="Date:" />
                            <DatePicker fx:id="datePickerReservation" prefWidth="200" style="-fx-background-color: #F7FAFC; -fx-background-radius: 10; -fx-border-color: #E2E8F0; -fx-border-radius: 10; -fx-border-width: 1;" />
                        </VBox>
                        
                        <VBox spacing="8">
                            <Label style="-fx-text-fill: #4A5568; -fx-font-size: 14px; -fx-font-weight: bold;" text="Time Slot:" />
                            <ComboBox fx:id="comboTimeSlot" prefWidth="200" promptText="Select time" style="-fx-background-color: #F7FAFC; -fx-background-radius: 10; -fx-border-color: #E2E8F0; -fx-border-radius: 10; -fx-border-width: 1;" />
                        </VBox>
                    </HBox>
                    
                    <Button onAction="#handleMakeReservation" style="-fx-background-color: linear-gradient(to right, #4CAF50, #45A049); -fx-background-radius: 25; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 12 30 12 30; -fx-cursor: hand;" text="Make Reservation">
                        <effect>
                            <DropShadow color="#4CAF5040" offsetY="3" radius="12" spread="0.3" />
                        </effect>
                    </Button>
                    
                    <VBox spacing="5" style="-fx-background-color: #F7FAFC; -fx-background-radius: 10; -fx-padding: 15;">
                        <Label style="-fx-font-weight: bold; -fx-text-fill: #4A5568;" text="ℹ️ Important Information" />
                        <Label style="-fx-text-fill: #718096; -fx-font-size: 12px;" text="• Reservations must be 24 hours to 7 days in advance" />
                        <Label style="-fx-text-fill: #718096; -fx-font-size: 12px;" text="• Reservation requires at least 40% available spots" />
                    </VBox>
                </VBox>

                <!-- Recent Parking History Card -->
                <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 30;">
                    <effect>
                        <DropShadow color="#0000001A" offsetY="5" radius="20" spread="0.1" />
                    </effect>
                    
                    <HBox alignment="CENTER_LEFT" spacing="12">
                        <HBox alignment="CENTER" style="-fx-background-color: linear-gradient(to bottom right, #ED8936, #DD6B20); -fx-background-radius: 10; -fx-padding: 10;">
                            <Label style="-fx-font-size: 20px; -fx-text-fill: white;" text="📜" />
                        </HBox>
                        <Label style="-fx-text-fill: #2D3748; -fx-font-size: 20px; -fx-font-weight: bold;" text="Recent Parking History" />
                    </HBox>
                    
                    <Separator style="-fx-background-color: linear-gradient(to right, transparent, #E2E8F0, transparent);" />
                    
                    <TableView fx:id="tableParkingHistory" prefHeight="200">
                        <columns>
                            <TableColumn fx:id="colDate" prefWidth="100" text="Date" />
                            <TableColumn fx:id="colEntry" prefWidth="100" text="Entry Time" />
                            <TableColumn fx:id="colExit" prefWidth="100" text="Exit Time" />
                            <TableColumn fx:id="colSpot" prefWidth="80" text="Spot" />
                            <TableColumn fx:id="colStatus" prefWidth="100" text="Status" />
                        </columns>
                    </TableView>
                    
                    <Button onAction="#handleViewHistory" style="-fx-background-color: linear-gradient(to right, #ED8936, #DD6B20); -fx-background-radius: 25; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 25 10 25; -fx-cursor: hand;" text="📊 Load Full History">
                        <effect>
                            <DropShadow color="#ED893640" offsetY="2" radius="10" spread="0.3" />
                        </effect>
                    </Button>
                </VBox>

            </VBox>
        </ScrollPane>
    </HBox>

    <!-- Status Bar -->
    <HBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-padding: 10 20 10 20; -fx-border-color: #E2E8F0; -fx-border-width: 1 0 0 0;">
        <Label style="-fx-text-fill: #16A34A; -fx-font-size: 12px; -fx-font-weight: bold;" text="⚡ Status: Connected" />
        <Separator orientation="VERTICAL" style="-fx-background-color: #E2E8F0;" />
        <Label fx:id="lblUserInfo" style="-fx-font-size: 12px;" text="User: --" />
        <Region HBox.hgrow="ALWAYS" />
        <Label style="-fx-font-size: 11px; -fx-text-fill: #718096;" text="© 2025 BPark v2.0" />
    </HBox>

</VBox>
